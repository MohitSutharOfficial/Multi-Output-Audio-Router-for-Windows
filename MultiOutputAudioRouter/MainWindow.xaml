<Window x:Class="MultiOutputAudioRouter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Multi-Output Audio Router" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Multi-Output Audio Router for Windows" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,15"
                   HorizontalAlignment="Center"/>
        
        <!-- Device List -->
        <GroupBox Grid.Row="1" Header="Available Audio Output Devices" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="DeviceListPanel"/>
            </ScrollViewer>
        </GroupBox>
        
        <!-- Control Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button x:Name="StartButton" Content="Start Routing" Width="120" Height="35" 
                    Margin="5" Click="StartButton_Click" FontWeight="Bold"/>
            <Button x:Name="StopButton" Content="Stop Routing" Width="120" Height="35" 
                    Margin="5" Click="StopButton_Click" IsEnabled="False" FontWeight="Bold"/>
            <Button x:Name="RefreshButton" Content="Refresh Devices" Width="120" Height="35" 
                    Margin="5" Click="RefreshButton_Click"/>
        </StackPanel>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" BorderBrush="Gray" BorderThickness="0,1,0,0" Padding="5">
            <TextBlock x:Name="StatusText" Text="Ready" FontStyle="Italic"/>
        </Border>
    </Grid>
</Window>
